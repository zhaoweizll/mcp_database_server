{
  "name": "@zhaoweizll/mysql-mcp-server",
  "version": "1.0.2",
  "description": "A Model Context Protocol (MCP) server that enables secure interaction with MySQL/MariaDB/TiDB/AWS OceanBase/RDS/Aurora MySQL DataBases - TypeScript version",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "mysql-mcp-server": "dist/bin.js"
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zhaoweizll/mcp_database_server.git"
  },
  "homepage": "https://github.com/zhaoweizll/mcp_database_server#readme",
  "bugs": {
    "url": "https://github.com/zhaoweizll/mcp_database_server/issues"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "tsx src/server.ts",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "test:db": "tsx src/test/test-db.ts"
  },
  "keywords": [
    "mcp",
    "mysql",
    "tidb",
    "oceanbase",
    "model-context-protocol",
    "async",
    "connection-pool",
    "typescript"
  ],
  "author": "zhaoweizll <zhaoweizll@foxmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0",
    "mysql2": "^3.6.5",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "tsx": "^4.16.5"
  }
}
